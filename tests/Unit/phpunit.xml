<phpunit bootstrap="bootstrap/autoload.php"
         colors="true"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Feature Tests">
            <directory>./tests/Feature</directory>
        </testsuite>
        <testsuite name="Unit Tests">
            <directory>./tests/Unit</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <include>
            <directory>app</directory>
        </include>
    </coverage>
</phpunit>
